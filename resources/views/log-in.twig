{% extends 'layouts/base.twig' %}

{% block title %}เข้าสู่ระบบ{% endblock %}

{% block head %}
<link rel="stylesheet" type="text/css" href="assets/log-in.css">
{% endblock %}

{% block content %}
<div class="container">
    <div class="border-login col-6 mx-auto my-5">
        <h1 class="my-2 text-center">เข้าสู่ระบบ</h1>
        <form class="my-5" method="post">
            <div class="form-group row justify-content-center">
                <div class="col-8">
                    <input type="text" id="username" class="form-control" placeholder="Username" autocomplete="off">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-8">
                    <input type="password" id="password" class="form-control" placeholder="Password" autocomplete="off">
                </div>
            </div>
            <div class="form-group row justify-content-center pt-2">
                <button type="submit" class="btn btn-success mr-4">เข้าสู่ระบบ</button>
                <button class="btn btn-warning ml-4">ลืมรหัสผ่าน</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}