{% extends 'layouts/base.twig' %}

{% block title %}เข้าสู่ระบบ{% endblock %}

{% block head %}
<link rel="stylesheet" type="text/css" href="assets/log-in.css">
{% endblock %}

{% block content %}
<div class="container">
    <div class="content text-center">
        <div class="border-login col-6 mx-auto">
            <h1 class="my-2">เข้าสู่ระบบ</h1>
            <form class="my-5">
                <div class="form-group row justify-content-center">
                    <div class="col-8">
                        <input type="text" id="username" class="form-control" placeholder="Username">
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-8">
                        <input type="password" id="password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row justify-content-center pt-2">
                    <button type="button" class="btn btn-success mr-4">เข้าสู่ระบบ</button>
                    <button type="button" class="btn btn-warning ml-4">ลืมรหัสผ่าน</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}